# 1  Unmanage Certain Windows
# ===========================


unmanage GNOME Panel
unmanage MPlayer
unmanage MPlayer VIDIX X11 Overlay
unmanage gnome-screensaver



# 2  Startup
# ==========


startup_message off
# TODO: This is a bit excessive, as it’s already done in our session script,
# but perhaps it’s valid to have it here as well, just in case…
exec xset +fp ~/.local/share/fonts r rate 240 30 m 2 20
exec xrdb -merge ~/.local/etc/X11/Xresources
exec xsetroot -cursor_name left_ptr -solid "#a4b0c0"
exec xsetbg -center ~/media/images/backgrounds/OTHER-linux_1600.png
exec unrat &
exec ratpoison-workspaces -i -b
exec gnome-terminal -e 'sh -c "TERM=xterm-256color screen -d -RR -U"'
exec firefox



# 3  Bar and Message Window Settings
# ==================================


set bargravity southwest
set barpadding 2 0
set border 0
set bgcolor #f6f6f6
set fgcolor #181818
set font -Bitwi.se-Fixed-Medium-R-SemiCondensed--13-120-75-75-C-60-*-*
set waitcursor 0



# 4  Key Bindings
# ===============


escape C-m
bind Escape abort
bind c exec gnome-terminal -e 'sh -c "TERM=xterm-256color screen -d -RR -U"'
bind C-c exec gnome-terminal -e 'sh -c "TERM=xterm-256color screen -d -RR -U"'
bind e exec gnome-logout
bind o only
bind x remove
bind X exec gnome-screensaver-command --lock
bind numbersign colon number 

newkmap applications
definekey applications b exec firefox
bind slash readkey applications

newkmap class-selectors
definekey class-selectors t exec ratpoison-select-by-class XTerm
definekey class-selectors b exec ratpoison-select-by-class Firefox-bin
bind comma readkey class-selectors

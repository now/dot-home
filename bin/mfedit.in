#! @ZSHELL@

if (( $# < 1 )); then
  print -r -- Usage: $(basename $0) FILE...
fi

local file=
for file in $*; do
  local tmp=; tmp=$(mktemp "$(dirname $file)/mfedit.XXXXXX") || exit 1
  {
    metaflac --export-tags-to=$tmp $file &&
      ${EDITOR:-vi} $tmp &&
      metaflac --remove-all-tags --import-tags-from=$tmp $file
  } always {
    rm -f $tmp
  }
done

#! @SHELL@

usage () {
  printf 'Usage: %s [FILE...]\n' "expr "//$0" : '.*/\(.*\)'"
  exit 1
}

warn () {
  printf '%s: %s\n' "`expr "//$0" : '.*/\(.*\)'`" "$*"
}

die () {
  warn "$@"
  exit 1
}

while test $# -ne 0; do
  case $1 in
    --) shift; break ;;
    -*) warn "unknown option “$1”"; usage ;;
    *) break ;;
  esac
  shift
done

test -t 1 || exec cat "$@"

t=
test "x$TERM" != xdumb && t=-t
set -- $t --alternate-editor "" "$@"

test -t 0 && exec emacsclient "$@"

: ${TMPDIR=/tmp}
{ d=`(umask 077 && mktemp -d "$TMPDIR/eXXXXXX") 2>/dev/null` &&
    test -n "$d" && test -d "$d"; } ||
  { d=$TMPDIR/e$$$RANDOM; (umask 077 && mkdir "$d") 2>/dev/null; } ||
  die "can’t create temporary directory"
trap 'rm -rf "$d"' 0 1 2 13 15
t=$d/stdin
cat > "$t" || exit 1
exec emacsclient "$@" "$t"

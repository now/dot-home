#! @SHELL@

put () {
  case `uname` in
    Cygwin*) cat > /dev/clipboard ;;
    Darwin) pbcopy ;;
    *) xclip ;;
  esac
}

get () {
  case `uname` in
    Cygwin*) cat /dev/clipboard | tr -d '\r' ;;
    Darwin) pbpaste ;;
    *) xclip -o ;;
  esac
}

if test $# -gt 0; then
  printf "%s" "$*" | put
elif test -t 0; then
  get
else
  put
fi

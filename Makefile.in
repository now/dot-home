	$(V_at)touch $@

hunspell/sv_SE.dic: $(HUNSPELL_SV_DICT_ZIP) hunspell/.dirstamp
	$(V_GEN)$(UNZIP) -qojd $(@D) $< dictionaries/$(@F)

# 1  Terminal Settings
# ====================


deflogin off
defscrollback 8192
maptimeout 10
term "screen-256color"



# 2  Formats
# ==========


activity "%0c activity: %n %t"
caption splitonly "%{= wd}%?%F%{..g}%?%n %t"
hardstatus alwayslastline "%{= dd}%?%-w%?%{..g}%n %t%?[%u]%?%{-}%+w%-014= %M %d, %0c"
sorendition = dr



# 3  Bindings
# ===========


escape ^Tt


# 3.1  General
# ------------

bind \# colon "number "
bind ^I windowlist -b -m
bind f fit
bind o only
bind M monitor
bind s split
bind S silence
bind w focus down
bind W focus up
bind x remove
bind X lockscreen
bind \' select 10


# 3.2  Applications
# -----------------

bind -c applications f colon "screen -t 'edit' 6 vim --servername vim "
bind -c applications m screen -t 'media' 7 $SHELL -c "LOCKTITLE=1 $SHELL"
bind -c applications i screen -t 'irc' 8 irssi --home=~/.local/etc/irssi
bind -c applications l screen -t 'log' -M 10 sudo tail -F /var/log/messages
bind -c applications v screen -t 'mixer' $SHELL -c "TERMCAP= alsamixer"

bind / command -c applications


# 3.3  Unbindings
# ---------------

# TODO: do we really need this?
bind \"
bind A
bind b
bind ^B
bind B
bind C
bind ^D
bind D
bind ^F
bind F
bind ^G
bind N
bind q
bind ^Q
bind Q
bind r
bind ^R
bind ^S
bind v
bind ^W
bind ^X
bind z
bind ^Z
bind .
bind {
bind }
bind >
bind <
bind =
bind _
bind ,


# 3.4  Mark Keys
# --------------

markkeys "j=t:k=n:l=s:L=S:n=k:^S=/"



# 4  Session Loading
# ==================


screen -t 'log' -M 10 sudo tail -F /var/log/messages
screen -t 'media' 7 $SHELL -c "LOCKTITLE=1 $SHELL"
screen 0

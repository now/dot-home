deflogin off
defscrollback 8192
# NOTE: Leaving maptimeout at the default of 300, Esc key will be delayed.
maptimeout 10
termcapinfo xterm* ti@:te@
term "screen-256color"

escape ^Tt
bind \# colon "number "
markkeys "l=s:^S=/:^R=?"

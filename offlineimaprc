[general]
accounts = FastMail
ui = Noninteractive.Quiet
metadata = ~/.local/var/cache/offlineimap

[mbnames]
enabled = yes
filename = ~/.local/var/tmp/mailboxes.rc
header = "mailboxes "
peritem = "=%(foldername)s"
sep = " "
footer = "\n"

[Account FastMail]
localrepository = Local
remoterepository = Remote

[Repository Local]
type = Maildir
sep = .
localfolders = ~/.maildir

[Repository Remote]
type = IMAP
ssl = yes
sep = .
remotehost = mail.messagingengine.com
nametrans = lambda foldername: re.sub('^$','.',re.sub('^INBOX','',foldername))

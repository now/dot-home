declare -U path
path=(. ~/bin $path)

LANG=en_US.UTF-8
LC_COLLATE=C

PAGER=vimless
MANPAGER="col -b | vimless +'setf man' -"
EDITOR=vim

VERSION_CONTROL=numbered
VERSION_WIDTH=2

GREP_COLOR="01;32"
MANWIDTH=79
SYSSCREENRC=/dev/null

export                                                                \
  PATH                                                                \
  LANG LC_COLLATE                                                     \
  PAGER MANPAGER EDITOR                                               \
  VERSION_CONTROL VERSION_WIDTH                                       \
  GREP_COLOR MANWIDTH SYSSCREENRC

local dir

if [[ $# -lt 1 ]] || (( $1 < 1 )); then
  echo "Usage: cdup LEVELS [PATH]"
  return 1
fi

integer i

dir=".."
for (( i = 1; i < $1; i++ )); do
  dir+="/.."
done

if (( $# > 1 )) && [[ ! -d "$dir/$2" ]]; then
  echo "cdup: no such file or directory: $dir/$2"
  return 1
else
  [[ ! -o PUSHD_SILENT ]] && echo "$dir/$2"
  cd $dir/$2
fi



